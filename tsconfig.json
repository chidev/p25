{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "types": ["vitest/globals", "node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "scripts/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist"]
}
